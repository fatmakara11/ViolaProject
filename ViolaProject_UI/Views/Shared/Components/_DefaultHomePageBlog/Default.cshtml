@{
    var blogs = ViewBag.Blogs as List<ViolaProject_UI.Dtos.BlogDtos.ResaultBlogDtos>;
}

<section class="from-blog spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title from-blog__title">
                    <h2>Blogdan</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @if (blogs != null && blogs.Count > 0)
            {
                foreach (var blog in blogs)
                {
                    <div class="col-lg-4 col-md-4 col-sm-6">
                        <div class="blog__item">
                            <div class="blog__item__pic">
                                <img src="@blog.GoruntuUrl" alt="@blog.Baslik">
                            </div>
                            <div class="blog__item__text">
                                <ul>
                                    <li><i class="fa fa-calendar-o"></i> @blog.Tarih.ToString("dd MMMM yyyy")</li>
                                    <li><i class="fa fa-comment-o"></i> 5</li>
                                </ul>
                                <h5><a href="#">@blog.Baslik</a></h5>
                                <p>@blog.KisaYazi</p>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <p>Henüz blog bulunmamaktadır.</p>
            }
        </div>
    </div>
</section>
